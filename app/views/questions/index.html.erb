<p id="notice"><%= notice %></p>

<h1>Questions</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Group</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.group.description %></td>
        <td><%= question.description %></td>
        <td><%= link_to 'Ver', question %></td>
        <td><%= link_to 'Editar', edit_question_path(question) %></td>
        <td><%= link_to 'Excluir', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Question', new_question_path %>
